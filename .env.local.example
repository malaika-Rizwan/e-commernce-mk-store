# ===========================================
# E-Commerce App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.

# -------------------------------------------
# MongoDB
# -------------------------------------------
MONGODB_URI=mongodb://localhost:27017/e-commerce
# Or MongoDB Atlas: mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# Generate a strong random string (e.g. openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# -------------------------------------------
# Stripe
# -------------------------------------------
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=<your-stripe-secret-key>
# Publishable key for client (optional, if using Stripe Elements on frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=<your-stripe-publishable-key>
# Webhook signing secret from Stripe CLI or Dashboard
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>

# -------------------------------------------
# Cloudinary
# -------------------------------------------
# Get from https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# -------------------------------------------
# Email (Nodemailer - order confirmation)
# -------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourstore.com

# -------------------------------------------
# Safepay (Pakistan)
# -------------------------------------------
# Get from https://getsafepay.com/dashboard (Live) or Sandbox
SAFEPAY_SECRET_KEY=<your-safepay-secret-key>
SAFEPAY_PUBLIC_KEY=<your-safepay-public-key>
# API base: https://api.getsafepay.com (live) or https://sandbox.api.getsafepay.com (test)
SAFEPAY_BASE_URL=https://api.getsafepay.com
# Optional: use sandbox for testing
# SAFEPAY_USE_SANDBOX=true
# Optional: separate secret for webhook signature verification (defaults to SAFEPAY_SECRET_KEY)
# SAFEPAY_WEBHOOK_SECRET=<your-webhook-secret>

# -------------------------------------------
# App
# -------------------------------------------
# Base URL of your app â€” must include https:// in production (no trailing slash)
# Local:  http://localhost:3000
# Vercel: https://e-commernce-mk-store.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000
